[Unit]
Description=Shipping Service

[Service]
User=roboshop
Environment=CART_ENDPOINT={{ lookup('aws_ssm', '{{env}}.cart_url', region='us-east-1' ) }}:8080
Environment=DB_HOST={{ lookup('aws_ssm', '{{env}}.mysql_url', region='us-east-1' ) }}
ExecStart=/bin/java -jar /app/shipping.jar
SyslogIdentifier=shipping

[Install]
WantedBy=multi-user.target
